def times (num1,num2):
    return num1 * num2

print (times(7,7))    

count = 0
while count <10 :
    print(count)
    count = count + 1
    if  count == 3:
        break

import random   
    
guess = random.randint(0, 100)  

while True:
    num = int(input("Угадай число: "))
    # если num меньше guess распечатать "выберите больше" если num 
    #меньше guess распечатать "выберите меньше" есди num равен 
    # guess распечатать "вы угадали" и остановить цикл
   
    
   

    if num < guess:
        print("выберите больше")
    elif num > guess:
        print(" выберите меньше")    
    elif num == guess:
        print("вы угадали ")   
        break
    else:
        print("Введите только цифру")     


