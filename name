def ask_name():
    name= input ("Как вас зовут: ")
   
    print ( "Привет ", name) 

def ask_age():
    age = int(input("Сколько вам лет: "))

    if age < 10:
        print("Вы маленький")
    elif age < 18:
        print("Вы подросток")    
    elif age < 100:
        print("Вы взрослый")   
    else:
        print("Вы очень взрослый")     


   
